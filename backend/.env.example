# Database
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/expense_tracker

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# App
APP_NAME=Expense Tracker API
APP_VERSION=1.0.0
DEBUG=True

# File Storage Configuration
STORAGE_TYPE=local
# Options: 'local' or 's3'

# Local Storage Settings
UPLOAD_DIR=storage/uploads
BASE_URL=http://localhost:8000
MAX_FILE_SIZE=5242880
# Max file size in bytes (5MB = 5 * 1024 * 1024)

# S3 Configuration (for S3-compatible storage)
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT_URL=
# Leave empty for AWS S3, or set to your S3-compatible service URL (e.g., http://localhost:9000 for MinIO)

# Image Processing Settings
CREATE_THUMBNAILS=True
COMPRESS_IMAGES=True
IMAGE_QUALITY=85

# Rate Limiting Configuration
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_ENABLED=True
